<%= flash[:items_create] %>
在庫リスト

<% @items.each do |item| %>
  <div>
  カテゴリ：<%= item.category.name %>
  </div>
  <div>
    <% if item.memo == "" %>
      メモ : なし
    <% else %>
      <%= item.memo %>
    <% end %>
  </div>
  <div>
  <% if item.image.attached? %>
    <%= image_tag item.image.variant(resize: '300x200'), class: 'item-images' %>
  <% else %>
    <%= image_tag 'noimage.jpg', :size => '300x200' %>
  <% end %>
  </div>
<% end %>