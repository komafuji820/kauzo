<%= form_with model: @user, url: add_member_users_path, method: :get, local: true do |f| %>
  
  <% if @users.present? %>
  <div>
    <% @users.each do |user| %>
      <%= check_box_tag "group[user_ids][]", user.id %>
      <%= label_tag "group[user_ids][]", user.nickname %>
      <%= label_tag "group[user_ids][]", user.email %>
    <% end %>
  <% else %>
    該当するユーザーはいませんでした
  <% end %>
  </div>

  <div class="actions">
  <%= f.submit "ユーザーリストに追加", class:"add-create-btn" %>
  </div>

<% end %>